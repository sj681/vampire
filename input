	#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
create:crystal-structure=sc

#------------------------------------------
# System Dimensions:
#------------------------------------------
dimensions:unit-cell-size = 3.54 !A
dimensions:system-size-x = 10 !nm
dimensions:system-size-y = 10 !nm
dimensions:system-size-z = 10 !nm
dimensions:macro-cell-size-x = 2.501 !nm
dimensions:macro-cell-size-y = 2.501 !nm
dimensions:macro-cell-size-z = 2.501 !nm
#------------------------------------------
# Material Files:
#------------------------------------------
material:file=Co.mat
#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:total-time-steps=100000
sim:time-step=1.0E-14
sim:enable-micromagnetic-variables
sim:time-steps-increment=1000
sim:cooling-time =1 !ns
sim:maximum-temperature=1000
sim:minimum-temperature=0
sim:temperature = 100
sim:cooling-function=linear
#sim:enable-dipole-fields
#sim:enable-fast-dipole-fields
#sim:dipole-field-update-rate = 1000
#sim:llb-stochastic-fields-off
#sim:enable-micromagnetic-boltzman-distribution
#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program=field-cool
sim:integrator=llg-heun

#------------------------------------------
# data output
#------------------------------------------
output:real-time
output:temperature
output:applied-field-strength
output:material-magnetisation
#output:magnetisation-length

#screen:time-steps
#screen:temperature